{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ES6",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictFunctionTypes": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/widgets/*": [
        "src/widgets/*"
      ],
    },
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*",
    "./types/img.d.ts"
  ]
}